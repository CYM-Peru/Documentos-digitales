# Database
# Option A: Use local PostgreSQL (localhost:5432)
# DATABASE_URL=postgresql://invoice_user:your_password@localhost:5432/invoice_db

# Option B: Use Supabase
# DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Option C: Use Docker PostgreSQL (postgres:5432 from inside container, localhost:5433 from outside)
DATABASE_URL=postgresql://invoice_user:change_this_password@postgres:5432/invoice_db

# NextAuth Configuration
NEXTAUTH_URL=https://cockpit.azaleia.com.pe
NEXTAUTH_SECRET=generate_random_secret_here_min_32_chars

# Encryption for sensitive credentials
ENCRYPTION_KEY=generate_random_32_char_encryption_key

# Initial Super Admin (created on first run)
SUPER_ADMIN_EMAIL=admin@azaleia.com.pe
SUPER_ADMIN_PASSWORD=change_this_password

# Application
NODE_ENV=production
PORT=3000

# File Upload
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=/app/public/uploads

# Optional: Supabase (for storage/auth if you want to use it)
# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Note: AWS, Google, and n8n credentials are configured per-organization
# in the admin panel, not here!
